#inspector {
	position: absolute;
	top: 32px;
	left: 0px;
	box-shadow: 0px 0px 5px black;
	border-right: 1px solid #222;
	pointer-events: none;
	bottom: 0px;
	z-index: 500;
	opacity: 0;

	font-weight bold
	transition all 0.25s
}

#inspector, #inspector input {
	font-size: 11px;
}

#inspector #_header
	position relative
	background linear-gradient(top, #323334, #18191a)
	border-bottom 1px solid #111
	padding 10px 10px 8px 10px
	font-size 12px

#inspector #_header #_closeBtn
	background linear-gradient(top, #656565, #444)
	
	border none
	box-shadow 0px 0px 3px #000, inset 1px 1px 1px #555
	text-shadow 0px -1px 0px #444, 0px 1px 0px #CCC
	color #AAA
	
	padding-top 0px
	font-size 13px

	z-index: 10;
	transition: all 0.25s;
	cursor: pointer;

	position: absolute;
	right: 0px;
	top: 0px;
	bottom: 3px;
	width: 37px;
	border-radius: 0px 0px 0px 10px;

#inspector #_tree {
	color #bbb9ff
	background #16161b
	// box-shadow inset -1px 0px 1px rgba(255, 255, 255, 0.1)
	pointer-events: auto;
	position: absolute;
	top: 0px;
	height: auto;
	bottom: 0px;
	overflow: auto;
	font-weight: bold;
	padding 10px 10px 10px 0px;

	transition: all 0.25s;
}

