/* Context menu */
.contextMenuOverlay {
	display: none;
	position: absolute;
	left: 0px;
	top: 0px;
	width: 100%;
	height: 100%;
	z-index: 99999;
}
.contextMenu {
	position: absolute;
	border: 1px solid #000000;
	border-color: #FFFFFF #888888 #888888 #FFFFFF;
	border-radius: 3px;
	background: #F0F0F0;
	z-index: 100000;
	padding: 4px 0 6px 0;
	box-shadow: 1px 3px 12px rgba(0, 0, 0, 0.4);
	cursor: default;
}
.contextMenu .optionSeparator1,
.contextMenu .optionSeparator2 {
	float: left;
	width: 100%;
	clear: right;
}
.contextMenu .optionSeparator1 {
	border: 1px solid #D0D0D0;
	border-width: 1px 0 0 0;
	margin-top: 8px;
}
.contextMenu .optionSeparator2 {
	border: 1px solid #F8F8F8;
	border-width: 0 0 1px 0;
	margin-bottom: 8px;
}
.contextMenu .option,
.contextMenu .checkedOption,
.contextMenu .uncheckedOption,
.contextMenu .selectedOption,
.contextMenu .audioOption,
.contextMenu .animationOption,
.contextMenu .fontOption,
.contextMenu .fontAddOption {
	float: left;
	width: 100%;
	height: 22px;
	font-size: 14px;
	color: #000000;
	padding: 2px 22px 5px;
	clear: right;
	border-radius: 2px;
	background-position: 4px 3px;
	background-repeat: no-repeat;
}
.contextMenu .checkedOption {
	background-image: url('/images/icons/accept.png');
}
.contextMenu .uncheckedOption {
	background-image: url('/images/icons/cross.png');
}
.contextMenu .selectedOption {
	background-image: url('/images/icons/bullet_blue.png');
}
.contextMenu .audioOption {
	background-image: url('/images/icons/control_play_blue.png');
}
.contextMenu .animationOption {
	background-image: url('/images/icons/film_edit.png');
}
.contextMenu .fontOption {
	background-image: url('/images/icons/font.png');
}
.contextMenu .fontAddOption {
	background-image: url('/images/icons/font_add.png');
}

.contextMenu .option:hover,
.contextMenu .audioOption:hover,
.contextMenu .animationOption:hover,
.contextMenu .fontOption:hover,
.contextMenu .fontAddOption:hover {
	color: #FFFFFF;
	background-color: #365187;
}

