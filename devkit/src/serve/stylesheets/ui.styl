/* rules for styling a TabbedPane with tabs on top */
topTabsHeight = 41px

.topTabs {
	width: 100%;
	height: 100%;
	background #365187 bgdark()
}
.topTabs .tabContainerWrapper {
	position absolute
	width 100%
	height topTabsHeight
	padding 10px 0px 0px 15px
	z-index 3;
}

.topTabs .tabContentsWrapper
	position absolute
	top topTabsHeight
	bottom 0px
	left 0px
	right 0px

.topTabs .tabContentsWrapper .mainPanel
	border-top-left-radius 3px
	box-shadow 0px 0px 3px black

.topTabs .tabContainer .tab {
	position: relative;
	top: 3px;
	height: 27px;

	display: inline-block;
	margin-right: 1px;
	padding: 5px 14px 1px;
	border-radius: 4px 4px 0px 0px;
	cursor: default;
	font: bold 14px Arial;
	color: #585858;
	text-shadow: 1px 1px 0px #AAA;
	border-bottom: 1px solid #666;
	border-top: 1px solid rgba(255, 255, 255, 0.2);
	box-shadow: 0px -1px 0px rgba(255, 255, 255, 0.3), 0px -2px 3px rgba(0, 0, 0, 0.2);
	background: linear-gradient(top, rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.1)), #B5BABD bglight()
}
.topTabs .tabContainer .tab.selected {
	top: 1px;
	height: 31px;
	border-bottom: none;
	padding-top: 6px;
	background: linear-gradient(bottom, rgba(255, 255, 255, 0.0), rgba(255, 255, 255, 0.4)), bglight()
	color: #333334;
	text-shadow: 1px 1px 0px rgba(255,255,255,0.3);
}

