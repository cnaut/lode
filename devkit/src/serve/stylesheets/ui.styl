/* Game Sidebar */
radius-factor = 5.7 // Apple computes border radius by dividing by 5.7
large-icon-size = 160
large-icon-radius = round(large-icon-size / radius-factor)

.projectIcon {
	center()
	width (large-icon-size)px
	height (large-icon-size)px
	margin-bottom 10px
	display: block;
	border-radius: unit(large-icon-radius, px);
	position: relative;
	background-size: contain;
}
.projectIcon.gloss::after {
	content: "";
	position: absolute;
	z-index: 10;
	display: block;
	width: 100%;
	height: 55%;

	background: linear-gradient(top, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.3));
	border-top-right-radius: 38px;
	border-top-left-radius: 38px;
	border-bottom-right-radius: 110px 20px;
	border-bottom-left-radius: 110px 20px;
	z-index: 5;
	box-shadow: inset 0px 2px 1px rgba(255, 255, 255, 0.7);
}

.hoverable:hover:not(.selected) .projectIcon:before
	content ''

	position: absolute;
	z-index: 10;
	display: block;
	width: 100%;
	height: 100%;

	background: linear-gradient(top, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.1));
	border-radius unit(large-icon-radius, px)
	z-index: 5;

