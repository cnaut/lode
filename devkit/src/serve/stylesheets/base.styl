html, body { margin: 0px; padding: 0px; height: 100%; width: 100%; overflow: hidden; }
div, ul, li, a, input {
	box-sizing: border-box;
}

body, div, span {
	-webkit-tap-highlight-color: rgba(0,0,0,0);
	-webkit-user-select: none;
}

body { font-family: Tahoma; }

input {
	border-width: 1px;
	border-radius: 4px;
	border: 1px solid rgba(0, 0, 0, 0.18);
	font-size: 12px;
	cursor: text;
	box-shadow:
		inset 0px 1px 2px rgba(0, 0, 0, 0.2),
		0px 1px 0px rgba(255, 255, 255, 0.3);
	outline: none;
	padding: 6px 4px 6px 4px;
	margin: 1px 0px 0px 0px;
}

input:focus {
	box-shadow:
		inset 0px 1px 2px rgba(0, 0, 0, 0.2),
		0px 1px 0px rgba(255, 255, 255, 0.3),
		0px 0px 3px rgba(130, 130, 255, 0.9);
}

button {
	background: linear-gradient(bottom, #444, #666);
	border: 1px solid #555;
	border-radius: 4px;
	color: white;
	font-weight: bold;
	font-size: 13px;
	text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.5);
	box-shadow:
		inset 0px 1px 2px rgba(0, 0, 0, 0.15),
		0px 1px 0px rgba(255, 255, 255, 0.3);
	padding: 4px 10px 6px;
}

button.circle {
	border-radius: 12px;
	opacity: 0.9;
	padding: 0px 0px 0px 2px;
	margin-left: 5px;
	text-align: center;
	width: 20px;
}

button.disabled {
	background: linear-gradient(bottom, #888, #AAA);
	border: 1px solid #999;
	cursor: default;
}
button:active {
	background: linear-gradient(bottom, #333, #555);
}

#_input {
	margin: 4px;
	color: #E0E0E0;
	padding: 4px;
	background: #000000;
	border: 1px solid #D0D0D0;
}
select {
	color: #E0E0E0;
	background: #000000;
	height: 22px;
	border: 1px solid #D0D0D0;
}

#_label {
	color: #444;
	font-size: 12px;
	font-weight: bold;
	text-shadow: 1px 1px 0px #CCC;
	float: left;
	margin-top: 7px;
}
